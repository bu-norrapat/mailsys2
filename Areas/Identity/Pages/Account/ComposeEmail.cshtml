@page
@model FinalProject.Areas.Identity.Pages.Account.ComposeEmailModel

@{
    ViewData["Title"] = "Compose Email";
}

<h3>@ViewData["Title"]</h3>

<form id="compose-email" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <table>
        <tr>
            <td>To</td>
            <td>
                <div class="form-floating">
                    <input asp-for="To" class="form" aria-required="true" />
                    <span asp-validation-for="To" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>Subject</td>
            <td>
                <div class="form-floating">
                    <input asp-for="Subject" class="form" aria-required="true" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>Body</td>
            <td>
                <div class="form-floating">
                    <textarea asp-for="Body" class="form" aria-required="true"></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <button id="send-email" type="submit" class="btn btn-primary">Send</button>
            </td>
        </tr>
    </table>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}